@model Mission8_3_11.Models.TaskItem

@{
    ViewData["Title"] = "Add Task";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">

        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">All Tasks</a></li>
                <li class="breadcrumb-item active">Add Task</li>
            </ol>
        </nav>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">&#43; Add New Task</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Add" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Task Description -->
                    <div class="mb-3">
                        <label asp-for="Task" class="form-label fw-semibold">
                            Task Description <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Task" class="form-control"
                               placeholder="What needs to be done?" autocomplete="off" />
                        <span asp-validation-for="Task" class="text-danger small"></span>
                    </div>

                    <!-- Due Date -->
                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger small"></span>
                    </div>

                    <!-- Category -->
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-semibold">
                            Category <span class="text-danger">*</span>
                        </label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">-- Select a Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <!-- Quadrant (Eisenhower Matrix) -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Priority Quadrant <span class="text-danger">*</span>
                        </label>
                        <div class="row g-2">
                            @{
                                var quadrants = new[]
                                {
                                    (1, "Q1 – Do First",    "Urgent &amp; Important",         "danger"),
                                    (2, "Q2 – Schedule",    "Not Urgent &amp; Important",     "success"),
                                    (3, "Q3 – Delegate",    "Urgent &amp; Not Important",     "warning"),
                                    (4, "Q4 – Eliminate",   "Not Urgent &amp; Not Important", "secondary"),
                                };
                            }
                            @foreach (var (val, title, desc, color) in quadrants)
                            {
                                <div class="col-6">
                                    <label class="d-block quadrant-card border rounded p-3 h-100"
                                           for="q@(val)add" style="cursor:pointer">
                                        <div class="d-flex align-items-start gap-2">
                                            <input class="form-check-input mt-1 flex-shrink-0"
                                                   type="radio" asp-for="Quadrant"
                                                   id="q@(val)add" value="@val" />
                                            <div>
                                                <span class="badge bg-@color mb-1">@Html.Raw(title)</span><br />
                                                <small class="text-muted">@Html.Raw(desc)</small>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Quadrant" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">
                            &#43; Add Task
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
